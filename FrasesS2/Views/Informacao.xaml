<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrasesS2.Views.Informacao" BackgroundColor="White"
             Title="SOBRE">

    <ContentPage.Content>
        <StackLayout>
            <!--Icone do aplicativo-->
            <Image Source="ic_Logo.png" HeightRequest="200" WidthRequest="200"></Image>
            <!--BOtão com a Info do App e link externo-->
            <Button x:Name="InfoApp" Text="FRASES S2 " Clicked="InfoApp_Clicked"></Button>
            <!--Botão com link para Instagram-->
            <Button x:Name="SeguirInstagram" Text="SIGA NOSSO INSTAGRAM" Clicked="SeguirInstagram_Clicked"></Button>
            <!--Texto para seção doaçaoes-->
            <Label TextColor="Black" FontSize="13"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontAttributes="Bold" Text="💰 FAÇA UMA DOAÇÃO 💰 &#10;"/>
                        <Span Text="Ajude a Manter o App Sem Anúncios!"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <!--Botão doação via PIX-->
            <Button x:Name="Copiar_Pix" Text="Copiar Chave PIX" Clicked="Copiar_Pix_Clicked"></Button>
            <!--Botão doação via Pic Pay-->
            <Button x:Name="PicPay" Text=" Doar com PicPay" Clicked="PicPay_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>