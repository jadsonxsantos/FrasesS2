<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrasesS2.Views.Informacao" BackgroundColor="White"
             Title="SOBRE">

    <ContentPage.Content>
        <StackLayout>
            <!--Icone do aplicativo-->
            <Image Source="ic_Logo.png" HeightRequest="200" WidthRequest="200"></Image>

            <!--BOtão com a Info do App e link externo-->
            <Button x:Name="InfoApp" Text="FRASES S2 3.0.21 " Clicked="InfoApp_Clicked"></Button>
            <!--Botão com link para telegram-->
            <!-- <Button x:Name="Telegram" BackgroundColor="#247773" Text="Telegram" Clicked="Telegram_Clicked"></Button>-->
            <!--Texto para seção doaçaoes-->
            <Label TextColor="Black" FontSize="13"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontAttributes="Bold" Text="💰 FAÇA UMA DOAÇÃO 💰 &#10;"/>
                        <Span Text="Ajude a Manter o App Sem Anúncios!"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <!--Botão doação via PIX-->
            <Button x:Name="Copiar_Pix" Text="Copiar Chave PIX" Clicked="Copiar_Pix_Clicked"></Button>
            <!--Botão doação via Pic Pay-->
            <Button x:Name="PicPay" Text=" Doar com PicPay" Clicked="PicPay_Clicked"></Button>

            <Label Margin="5,10,5,10" FontSize="15"
                   Text="Frases S2" BackgroundColor="Black"
                   HorizontalTextAlignment="Center" />
            <Label Margin="5,10,5,10" FontSize="15" BackgroundColor="Black"
                   Text="Siga nosso app através dos meios de comunicação abaixo:"
                   HorizontalTextAlignment="Center" />
            <Button x:Name="Instagram" Text="Instagram" Clicked="Instagram_Clicked"></Button>
            <Button x:Name="Telegram" Text="Comunidade Frases S2" Clicked="Telegram_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>